<form action="/register" method="POST">
  <div class="form-group mr-sm-3">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control mr-sm-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group mr-sm-3">
    <label for="exampleUsername1">Username</label>
    <input type="text" class="form-control" id="exampleUsername1" aria-describedby="username" placeholder="Enter Username" name="username">
    <small id="emailHelp" class="form-text text-muted">This is what people will see you by.</small>
  </div>
  <div class="form-group mr-sm-3">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>